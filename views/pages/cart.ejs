<%- include('../partials/head.ejs') %>
    <main>
        <%- include('../partials/header.ejs') %>
            <section class="cart-section">
                <div class="cart-header">
                    <div class="breadCrumb">
                        <a class="cart-link" href="/index.ejs"><img class="cart-link-img" src="/img/arrow-left.svg">Volver</a>
                    </div>
                    <div class="cart-title">
                        <h3>Productos en tu Carrito</h3>
                    </div>
                </div>

                <div class="cart-container">
                    <% let acum = 0 %>
                    <% for (product of data){%>

                    <%- include('../partials/cart_card.ejs', {
                        images: product.images, 
                        title: product.title,
                        price: product.price,
                        stock: product.stock
                    }) %>

                    <% acum = acum + product.price %>
                    <% } %>
                </div>

                <div class="cart-checkout">
                    <div class="cart-footer-main">
                        <span class="total-points-text">Total de Puntos</span>
                        <span class="total-points"> <%= acum %></span>
                    </div>
                    <div class="cart-button-end">
                        <button class="button-list" type="submit">Ir a Pagar</button>
                    </div>
                </div>

            </section>

            <%- include('../partials/footer.ejs') %>
    </main>

    </html>