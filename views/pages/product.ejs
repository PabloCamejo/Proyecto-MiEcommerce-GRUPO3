<%- include('../partials/head.ejs', {link: '', titulo: `${card.title} | MiEcommerce`}) %>


    <%- include('../partials/header.ejs') %>
                                    <div class="container">
                                        <div class="nav-products">
                                            <a href="/"><i class="fa-solid fa-arrow-left"></i> Volver al listado</a>
                                            <p> > <%=card.title %></p>
                                        </div>
                                        <section class="section-content-products">
                                            <p class="title-mobile">
                                                <%= card.title%>
                                            </p>
                                            <article class="article-more-photos">
                                                <% for (images of card.images){ %>
                                                    <img class="img-product-secondary" src="<%= images %>" alt="product-img-1">
                                                <% } %>
                                            </article>
                                            <article class="img-text-principal">
                                                <% let ruta = card.images[0] || '/img/notImage.png' %>
                                                <img class="img-product-principal" src="<%= ruta %>" alt="product-img-principal">
                                            </article>
                                            <article class="content-description">
                                                <div class="text-buttons">
                                                    <p class="title-desktop">
                                                        <%= card.title%>
                                                    </p>
                                                    <p>
                                                        <%= card.price%> <span>PUNTOS</span>
                                                    </p>
                                                    <input class="button" type="button" value="Agregar al carrito">
                                                    <p class="text-description">
                                                        <%= card.description%>
                                                    </p>
                                                </div>
                                            </article>
                                        </section>
                                        <h3>Tambien te puede interesar</h3>
                                    </div>
                                    <div class="product-car">

                                        <section class="section-cards ">
                                            <% for (let i=1; i <=4; i++){%>
                                                <%- include('../partials/cardProduct.ejs', { id: data[i].id, images:
                                                    data[i].images, title: data[i].title, price: data[i].price }) %>

                                                    <% } %>
                                        </section>

                                    </div>

                                    <%- include('../partials/categorias.ejs') %>

                                        <%- include('../partials/footer.ejs') %>